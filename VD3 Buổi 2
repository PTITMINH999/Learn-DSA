#include <bits/stdc++.h>
using namespace std;

#define faster ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
#define ll long long
#define vi vector<int>
#define vl vector<ll>
#define pii pair<int, int>
#define pll pair<ll, ll>
#define pb push_back
#define mp make_pair
#define fi first
#define se second

const int MOD = 1e9 + 7;
const int INF = 1e9;
const ll LLINF = 1e18;
const int M = 1e6+1;

void solve(){
   int n;cin>>n;
   int s = 0;
   for(int i=1;i<=n;i++){
       if(i%2) s+=i;
       else s-=i;
   }
   cout<<s;
}
int main(){
    faster;
    int t =1;
    //cin>>t;
    while(t--){
        solve();
    }
}
